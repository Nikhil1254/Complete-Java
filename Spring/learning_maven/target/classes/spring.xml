<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
   http://www.springframework.org/schema/context
   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <bean id="vehicle" class="com.nikhil.Bike"></bean>
    <context:component-scan base-package="com.nikhil"></context:component-scan>

    <bean id="tyre" class="com.nikhil.Tyre">
        <constructor-arg value="CEAT"></constructor-arg>
    </bean>

    <!-- <bean id="car" class="com.nikhil.Car">
        <property name="tyre" value="MRF"></property>
    </bean> -->
</beans>